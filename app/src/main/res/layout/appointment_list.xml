<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:background="#EEEEEE">

    <androidx.cardview.widget.CardView
        android:id="@+id/items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp">


        <RelativeLayout
            android:id="@+id/itemSelected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card"
            android:elevation="8dp"
            android:padding="5dp">


            <TextView
                android:id="@+id/n_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="1dp"
                android:text="Mother: "
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/names"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/n_holder"
                android:text="Lorem Ipsum Dolor Amet"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/c_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/names"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="1dp"
                android:text="Contact: "
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/names"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/n_holder"
                android:text="Lorem Ipsum Dolor Amet"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/sep"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/contact"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorPrimary" />

            <TextView
                android:id="@+id/d_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sep"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="1dp"
                android:text="Set Date: "
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sep"
                android:layout_toRightOf="@+id/d_holder"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="10dp"
                android:text="Lorem Ipsum Dolor Amet"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/t_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="1dp"
                android:text="Set Time: "
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date"
                android:layout_toRightOf="@+id/t_holder"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="10dp"
                android:text="Lorem Ipsum Dolor Amet"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/com_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/time"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="1dp"
                android:text="Comment: "
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/time"
                android:layout_toRightOf="@+id/com_holder"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="10dp"
                android:text="Lorem Ipsum Dolor Amet"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/s_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/comment"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="1dp"
                android:text="Status: "
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/comment"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/s_holder"
                android:text="Lorem Ipsum Dolor Amet"
                android:textSize="16sp"
                android:textColor="@color/red"
                android:textStyle="bold" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
