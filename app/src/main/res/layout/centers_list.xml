<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:background="#eee">

    <androidx.cardview.widget.CardView
        android:id="@+id/items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp">


        <RelativeLayout
            android:id="@+id/itemSelected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card"
            android:elevation="8dp"
            android:padding="5dp">


            <TextView
                android:id="@+id/c_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:text="H/C: "
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/c_holder"
                android:text="Lorem Ipsum Dolor Amet"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/o_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/center"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="10dp"
                android:text="In charge: "
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/officer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/center"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/o_holder"
                android:text="Lorem Ipsum Dolor Amet"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/contact_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/officer"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="10dp"
                android:text="Contact: "
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/officer"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/contact_holder"
                android:text="Lorem Ipsum Dolor Amet"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/add_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contact"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="10dp"
                android:text="Address: "
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contact"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/add_holder"
                android:text="Lorem Ipsum Dolor Amet"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/address"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:visibility="invisible"
                android:text="date"
                android:textColor="@color/red" />

        </RelativeLayout>



    </androidx.cardview.widget.CardView>
</LinearLayout>
